{
    "name": "better-toml",
    "displayName": "Better TOML",
    "description": "Better TOML Language support",
    "version": "0.1.0",
    "publisher": "bungcip",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:toml"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "toml",
                "aliases": [
                    "TOML", "toml"
                ],
                "extensions": [
                    ".toml"
                ],
                "mimetypes": [
                    "text/x-toml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],

        "grammars": [
            {
                "language": "toml",
                "scopeName": "source.toml",
                "path": "./syntaxes/TOML.tmLanguage"
            }
        ]

    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.6",
        "vscode": "^1.0.3",
        "mocha": "^3.1.2",
        "@types/node": "^6.0.46",
        "@types/mocha": "^2.2.32"
    }
}